<div class="uk-child-width-1-4@m" uk-grid>
    {{#each products}}
        <div>
            <div class="uk-card uk-card-default uk-card-hover uk-border-rounded">
                <div class="uk-card-media-top">
                    <img alt="foto producto" />
                </div>
                <div class="uk-card-body">
                    <h3 class="uk-card-title">{{ this.title }}</h3>
                    <h5>${{this.price}}</h5>
                    <p>{{this.description}}</p>
                    <p>{{this.stock}}</p>
                    <p> {{this.category}} </p>
                    <button class="uk-button uk-button-secondary uk-button-small uk-border-rounded">Agregar al carrito</button>
                </div>
            </div>
        </div>
    {{/each}}
</div>